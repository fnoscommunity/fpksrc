set daemon 60
set pidfile /var/apps/monit/var/monit.pid
set statefile /var/apps/monit/var/monit.state
set idfile /var/apps/monit/var/monit.id

set eventqueue
    basedir /var/apps/monit/var/events
    slots 100

set httpd
    port 2812
    allow "@control_username@":"@control_password@"
    use address 0.0.0.0

#include files in subdir
include /var/apps/monit/var/monit.d/*
